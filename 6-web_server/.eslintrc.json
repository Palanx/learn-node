{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi" : ["error", "always"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "space-in-parens": ["error", "always"],
        "computed-property-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"]
    }
}
